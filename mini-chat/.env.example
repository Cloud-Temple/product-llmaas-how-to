# URL de base de l'API LLMaaS
API_URL="https://api.ai.cloud-temple.com/v1"

# Votre clé API LLMaaS
API_KEY="Votre_Clef"

# Optionnel: Modèle par défaut à utiliser
DEFAULT_MODEL="qwen3:30b-a3b"

# Nombre maximum de tokens pour la réponse du modèle
MAX_TOKENS=8192

# --- Configuration RAG (Optionnelle) ---

# Modèle d'embedding à utiliser pour le RAG
EMBEDDING_MODEL="granite-embedding:278m"

# Configuration du serveur vectoriel Qdrant
QDRANT_URL="localhost"
QDRANT_PORT=6333
QDRANT_COLLECTION="minichat_rag"

# Stratégie de découpage (chunking) pour le RAG
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=100
