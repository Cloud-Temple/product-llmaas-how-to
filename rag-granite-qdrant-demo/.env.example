# URL de l'instance Qdrant
# L'URL pointe vers le nom du service qdrant dans le docker-compose
QDRANT_URL="http://qdrant:6333"

# Nom de la collection dans Qdrant
COLLECTION_NAME="rag_granite_demo"

# Configuration de l'API LLMaaS (utilisée pour les embeddings ET la génération)
LLMAAS_API_BASE="https://api.ai.cloud-temple.com/v1"
LLMAAS_API_KEY="votre_cle_api_ici"

# --- Configuration des Modèles ---
# Modèle d'embedding à appeler via l'API LLMaaS
EMBEDDING_MODEL_NAME="granite-embedding:278m"

# Modèle LLM de génération à appeler via l'API LLMaaS
LLM_MODEL_NAME="granite3.3:8b"
