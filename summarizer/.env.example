# URL de base de l'API LLMaaS (par défaut: http://localhost:8000/v1)
LLMAAS_API_BASE_URL=http://localhost:8000/v1

# Clé d'API pour l'authentification (laissez vide si non requise)
LLMAAS_API_KEY=votre_cle_api_ici

# Modèle LLM par défaut à utiliser si non spécifié en ligne de commande
LLMAAS_DEFAULT_MODEL=qwen3:30b-a3b

# Modèle LLM par défaut pour la synthèse finale
LLMAAS_FINAL_MODEL=granite3.3:8b

# Nombre de tokens par défaut pour la synthèse finale
LLMAAS_FINAL_MAX_TOKENS=60000

# Nombre de tokens par défaut pour chaque chunk
LLMAAS_MAX_TOKENS_PER_CHUNK=4096
